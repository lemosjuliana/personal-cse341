    ,    
    "/review/": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Reviews"
        ],
        "description": "Creates a new review",
        "parameters": [
          {
            "in": "body",
            "name": "review",
            "description": "Review object",
            "required": true,
            "schema": {
              "$ref": "#/parameters/ReviewData"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/review/{id}": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/ReviewId"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Reviews"
        ],
        "description": "Updates a review",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the review",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "review",
            "description": "Review object",
            "required": true,
            "schema": {
              "$ref": "#/parameters/ReviewData"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Review not found"
          },
          "500": {
